{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"module": "ESNext",
		"target": "ES5",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strict": true,
		"strictFunctionTypes": true,
		"importHelpers": true,
		"downlevelIteration": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "ES7", "ES6", "DOM"]
	},
	"include": ["packages/*/src"]
}
