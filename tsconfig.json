{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"module": "ESNext",
		"target": "ES5",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strict": true,
		"strictFunctionTypes": true,
		"importHelpers": true,
		"downlevelIteration": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"lib": ["ES5", "ES6", "ES7", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ESNext", "DOM"],
		"types": ["jest", "node"]
	},
	"include": ["packages/*/src"]
}
